# ------------ InfluxDB (v2) -------------
INFLUXDB_ORG=stocks
INFLUXDB_BUCKET=lse
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin12345
# Use a long random string here in real deployments
INFLUXDB_ADMIN_TOKEN=devtoken-please-change-me

# ------------ Grafana -------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ------------ Fetcher -------------------
# Comma-separated list of LSE tickers (remember .L suffix)
TICKERS=VOD.L,HSBA.L,BP.L
# Fetch loop interval (seconds)
FETCH_INTERVAL_SECONDS=300
# Bar interval for yfinance (e.g., 1m, 5m, 15m, 1d)
YF_INTERVAL=1m
# yfinance period used to ensure data coverage (e.g., 1d for intraday)
YF_PERIOD=1d
